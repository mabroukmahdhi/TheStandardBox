@using PrettyBlazor

<label style="color:@Color">@Message</label>

<Condition Evaluation=@(Errors is not null)>
    <Match>
        <ul>
            <Iterations Items=Errors Context=Error>
                <li style="color:@Color">@Error</li>
            </Iterations>
        </ul>
    </Match>
</Condition>