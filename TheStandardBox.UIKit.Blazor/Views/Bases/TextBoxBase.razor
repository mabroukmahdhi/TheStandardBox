@using Syncfusion.Blazor.Inputs
@inherits InputComponent<string>
@if (IsVisible)
{
    <SfTextBox ID=@Id
           InputAttributes=@GetAttributes()
           Value=@Value
           CssClass=@CssClass
           FloatLabelType=@FloatLabelType.Auto
           Type=@GetInputType()
           Enabled=@IsEnabled
           Width=@Width
           ValueChanged=@ValueChanged
           Input=@OnInputEvent
           Placeholder=@Placeholder />
} 